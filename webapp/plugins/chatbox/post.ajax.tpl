[for:posts]
<div class="line cf" data-id="[posts.id]">
	<div class="user"><span class="picture"><a href="mailto:[posts.email]" title="[posts.email]"><img src="https://www.gravatar.com/avatar/[posts.picture]" /></a></span></div>
	<div class="comment">[posts.liner]</div>
	<a class="a-del" style="display:none;" href="/admin/comments/del/[posts.id]"><img src="/files/img/trash.png" alt="delete" title="delete" height="32" width="32"/></a>
</div>
[end:posts]